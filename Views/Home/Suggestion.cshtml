@{
    ViewData["Title"] = "Make Suggestion";
}

@model FoodApp.Models.Suggestion

<br />
<form asp-action="Suggestion" method="post">
    <div class="form-group">
        <label asp-for="name">Name</label>
        <input asp-for="name" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="shopName">Shop Name</label>
        <input asp-for="shopName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="favDish">Favorite Dish</label>
        <input asp-for="favDish" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="shopPhoneNumber">Shop Phone Number</label>
        <input asp-for="shopPhoneNumber" class="form-control" />
    </div>
    <br />

    <button type="submit" class="btn btn-primary">Submit</button>
</form>
