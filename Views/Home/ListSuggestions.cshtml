@{
    ViewData["Title"] = "Suggestion List";
}

@model IEnumerable<FoodApp.Models.Suggestion>

<div class="jumbotron">
    <h1>Suggestions</h1>
    <p>A list of suggested restaurants.</p>
</div>

<div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Shop Name</th>
                <th scope="col">Favorite Dish</th>
                <th scope="col">Shop Phone Number</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Suggestion elem in Model)
            {
                <tr>
                    <td scope="row">@elem.name</td>
                    <td>@elem.shopName</td>
                    <td>@elem.favDish</td>
                    <td>@elem.shopPhoneNumber</td>
                </tr>
            }
        </tbody>
    </table>
</div>
